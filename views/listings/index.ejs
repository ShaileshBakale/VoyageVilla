<% layout("/layouts/boilerplate") %>

    <body>
        <div class="mobile-filters-bar d-flex d-md-none mb-2">
            <button id="filtersToggleBtn" class="btn btn-outline-secondary w-20" type="button" data-bs-toggle="collapse"
                data-bs-target="#filtersCollapse" aria-expanded="false" aria-controls="filterCollapse">
                <i class="fa-solid fa-filter me-2"></i> Filters
            </button>

            <!-- mobile clone of tax toggle -->
            <div class="tax-toggle mobile-tax-toggle" id="mobileTaxToggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefaultMobile">
                    <label class="form-check-label" for="switchCheckDefaultMobile">With Taxes</label>
                </div>
            </div>
        </div>


        <!-- Filters Container -->
        <div class="collapse d-md-block" id="filtersCollapse">
            <div id="filters" class="filters-scroll">

                <a href="/listings?category=Trending" class="filter" data-category="Trending">
                    <div><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p>
                </a>

                <a href="/listings?category=Rooms" class="filter" data-category="Rooms">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </a>

                <a href="/listings?category=Iconic Cities" class="filter" data-category="Iconic Cities">
                    <div><i class="fa-solid fa-mountain-city"></i></div>
                    <p>Iconic Cities</p>
                </a>

                <a href="/listings?category=Mountains" class="filter" data-category="Mountains">
                    <div><i class="fa-solid fa-mountain"></i></div>
                    <p>Mountains</p>
                </a>

                <a href="/listings?category=Castles" class="filter" data-category="Castles">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>
                    <p>Castles</p>
                </a>

                <a href="/listings?category=Arctic" class="filter" data-category="Arctic">
                    <div><i class="fa-solid fa-snowflake"></i></div>
                    <p>Arctic</p>
                </a>

                <a href="/listings?category=Camping" class="filter" data-category="Camping">
                    <div><i class="fa-solid fa-campground"></i></div>
                    <p>Camping</p>
                </a>

                <a href="/listings?category=Farms" class="filter" data-category="Farms">
                    <div><i class="fa-solid fa-cow"></i></div>
                    <p>Farms</p>
                </a>

                <a href="/listings?category=Amazing Pools" class="filter" data-category="Amazing Pools">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <p>Amazing Pools</p>
                </a>

                <a href="/listings?category=Beach" class="filter" data-category="Beach">
                    <div><i class="fa-solid fa-umbrella-beach"></i></div>
                    <p>Beach</p>
                </a>

                <a href="/listings?category=Boats" class="filter" data-category="Boats">
                    <div><i class="fa-solid fa-ship"></i></div>
                    <p>Boats</p>
                </a>

                <div class="tax-toggle desktop-tax-toggle">
                    <div class="form-check-reverse form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                        <label class="form-check-label" for="switchCheckDefault">With Taxes</label>
                    </div>
                </div>
            </div>
        </div>

        <% if (typeof search !=="undefined" && search.trim() !=="" ) { %>
            <% if (listings.length> 0) { %>
                <h3 class="mb-4">Showing results for <b>"<%= search %>"</b></h3>
                <% } else { %>
                    <h3 class="text-muted mb-4">No results found for <b>"<%= search %>"</b></h3>
                    <% } %>
                        <% } %>
                            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
                                <% for (let listing of listings) { %>
                                    <a href="/listings/<%= listing._id %>" class="listing-link">
                                        <div class="card col listing-card">
                                            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                                                style="height: 20rem">
                                            <div class="card-img-overlay"> </div>
                                            <div class="card-body">
                                                <p class="card-text">
                                                    <b>
                                                        <%= listing.title %><br>
                                                    </b>
                                                    &#8377; <%= listing.price? listing.price.toLocaleString("en-IN")
                                                        : "N/A" %> /night
                                                        <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                                                </p>
                                            </div>
                                        </div>
                                    </a>
                                    <% } %>

                            </div>

    </body>

    <script>
        let taxToggleDesktop = document.getElementById("switchCheckDefault");
        let taxToggleMobile = document.getElementById("switchCheckDefaultMobile");


        // function reused for both toggles
        function toggleTaxInfo() {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (let info of taxInfo) {
                info.style.display = (info.style.display !== "inline") ? "inline" : "none";
            }
        }

        // Attach to both switches
        if (taxToggleDesktop) {
            taxToggleDesktop.addEventListener("click", toggleTaxInfo);
        }
        if (taxToggleMobile) {
            taxToggleMobile.addEventListener("click", toggleTaxInfo);
        }

        document.addEventListener("DOMContentLoaded", () => {
            const toggleBtn = document.getElementById("filtersToggleBtn");
            const filterBox = document.getElementById("filtersCollapse");

            if (!toggleBtn || !filterBox) return;

            toggleBtn.addEventListener("click", () => {
                filterBox.classList.toggle("show-filters");
            });
        });
    </script>